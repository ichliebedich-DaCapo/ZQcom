<Window x:Class="ZQcom.Views.DataDisplayChartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        xmlns:sp="clr-namespace:ScottPlot.WPF;assembly=ScottPlot.WPF" xmlns:viewmodels="clr-namespace:ZQcom.ViewModels" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        Title="DataChart" Height="600" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top row for buttons and input fields -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="5">
            <Button Content="FFT" Command="{Binding FFTCommand}" Margin="0,0,5,0"/>
            <CheckBox Content="NewWindow" IsChecked="{Binding IsEnableNewFFTWindow}" VerticalAlignment="Center" Margin="0,0,5,0"/>
            <TextBox Text="{Binding FFTStartIndexInput}" Width="50" Margin="0,0,5,0"/>
            <TextBox  Text="{Binding FFTLengthInput}" Width="50" Margin="0,0,5,0"/>
            <Button Content="Smooth" Margin="0,0,5,0"/>
            <Button Content="Delete abnormal data"  Margin="0,0,5,0"/>
            <TextBox Text="{Binding ThresholdInput}" Width="50" Margin="0,0,5,0"/>
        </StackPanel>

        <!-- Bottom row for ScottPlot control -->
        <sp:WpfPlot Name="DataChartPlot" Grid.Row="1"/>
    </Grid>
</Window>



